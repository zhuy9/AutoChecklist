<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/entry_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_baseline_check_box_outline_blank_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/entry_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the content"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/entry_edit"
                style="@style/entryButton"

                android:layout_toLeftOf="@+id/entry_share"
                android:src="@drawable/ic_baseline_edit_24" />

            <ImageButton
                android:id="@+id/entry_share"
                style="@style/entryButton"

                android:layout_toLeftOf="@+id/entry_delete"
                android:src="@drawable/ic_baseline_send_24" />

            <ImageButton
                android:id="@+id/entry_delete"
                style="@style/entryButton"
                android:layout_alignParentEnd="true"

                android:src="@drawable/ic_baseline_delete_forever_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/entry_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_repeat_24" />

            <TextView
                android:id="@+id/entry_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/entry_time_icon"
                android:text="D/R" />

            <ImageView
                android:id="@+id/entry_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/entry_time_text"
                android:src="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/entry_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/entry_location_icon"
                android:text="LOC" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/entry_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/entry_location_text"
                android:background="@color/secondaryLightColor"
                android:orientation="horizontal" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>