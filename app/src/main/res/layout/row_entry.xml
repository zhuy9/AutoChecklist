<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/entry_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_baseline_check_box_outline_blank_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/entry_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the content"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/entry_edit"
                style="@style/entryButton"

                android:layout_toLeftOf="@+id/entry_share"
                android:src="@drawable/ic_baseline_edit_24" />

            <ImageButton
                android:id="@+id/entry_share"
                style="@style/entryButton"

                android:layout_toLeftOf="@+id/entry_delete"
                android:src="@drawable/ic_baseline_send_24" />

            <ImageButton
                android:id="@+id/entry_delete"
                style="@style/entryButton"
                android:layout_alignParentEnd="true"

                android:src="@drawable/ic_baseline_delete_forever_24" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/entry_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/secondaryLightColor"/>


    </LinearLayout>


</LinearLayout>